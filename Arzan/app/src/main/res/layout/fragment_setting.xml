<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context=".fragment.SettingFragment">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/BottomCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_btn"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back"
                android:layout_width="11dp"
                android:layout_height="23dp"/>
            <TextView
                android:text="@string/settings"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:backgroundTint="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="75dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/dark_mode"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/expanded_header"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_dark_mode"
                        android:src="@drawable/ic_dark_mode"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:layout_toEndOf="@+id/icon_dark_mode"
                        android:text="@string/drak_theme"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:textColor="#5A5A5A"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/dark_mode_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:checked="false"
                        android:thumb="@drawable/thumb"
                        app:track="@drawable/track" />
                </RelativeLayout>
                <com.github.florent37.expansionpanel.ExpansionHeader
                    android:id="@+id/expanded_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:expansion_layout="@id/expanded_layout"
                    app:expansion_headerIndicator="@id/down"
                    android:layout_marginStart="20dp"

                    app:layout_constraintTop_toBottomOf="@+id/dark_mode"
                    app:expansion_headerIndicatorRotationCollapsed="1"
                    android:layout_marginTop="30dp"
                    app:expansion_headerIndicatorRotationExpanded="180"
                    app:layout_constraintStart_toStartOf="@+id/dark_mode"
                    app:layout_constraintEnd_toEndOf="@id/dark_mode"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/icon_lang"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_language" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="10dp"
                                        android:layout_toEndOf="@+id/icon_lang"
                                        android:gravity="center_vertical"
                                        android:text="@string/language"
                                        android:textColor="#5A5A5A"
                                        android:textSize="18sp" />

                                    <ImageView
                                        android:id="@+id/down"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginEnd="14dp"
                                        android:src="@drawable/ic_small_down" />

                                </RelativeLayout>

                            </com.github.florent37.expansionpanel.ExpansionHeader>

                            <com.github.florent37.expansionpanel.ExpansionLayout
                                android:id="@+id/expanded_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/expanded_header"
                                android:paddingStart="40dp"
                                android:paddingEnd="40dp"
                                app:expansion_expanded="false"
                                >

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/tkm"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:padding="3dp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:paddingTop="3dp"
                                            android:src="@drawable/tkm" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="5dp"
                                            android:text="@string/tkm"
                                            android:textColor="#5A5A5A"
                                            android:textSize="20sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/rus"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="5dp"
                                        android:padding="3dp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/tkm">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:paddingTop="3dp"
                                            android:src="@drawable/rus" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="5dp"
                                            android:text="@string/rus"
                                            android:textColor="#5A5A5A"
                                            android:textSize="20sp" />

                                    </LinearLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </com.github.florent37.expansionpanel.ExpansionLayout>
                <RelativeLayout
                    android:id="@+id/choose_region"
                    app:layout_constraintTop_toBottomOf="@id/expanded_layout"
                    app:layout_constraintStart_toStartOf="@id/dark_mode"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_location"
                        android:src="@drawable/ic_location_red"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/chooseReg"
                        android:layout_toEndOf="@+id/icon_location"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp"
                        android:textColor="#5A5A5A"
                        android:text="@string/choose_region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rules"
                    app:layout_constraintTop_toBottomOf="@id/choose_region"
                    app:layout_constraintStart_toStartOf="@id/dark_mode"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_rules"
                        android:src="@drawable/ic_rules"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/icon_rules"
                        android:text="@string/rules"
                        android:textColor="#5A5A5A"
                        android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/payment"
                    app:layout_constraintTop_toBottomOf="@id/choose_region"
                    app:layout_constraintStart_toStartOf="@id/dark_mode"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/icon_pay"
                    android:src="@drawable/ic_payment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/icon_pay"
                    android:text="@string/payment"
                    android:textColor="#5A5A5A"
                    android:textSize="18sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/download"
                    app:layout_constraintTop_toBottomOf="@id/rules"
                    app:layout_constraintStart_toStartOf="@id/dark_mode"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_download"
                        android:src="@drawable/ic_download_red"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:layout_toEndOf="@+id/icon_download"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp"
                        android:textColor="#5A5A5A"
                        android:text="@string/download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/exit"
                    app:layout_constraintTop_toBottomOf="@id/download"
                    app:layout_constraintStart_toStartOf="@id/dark_mode"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/icon_exit"
                        android:src="@drawable/ic_exit"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <TextView
                        android:layout_toEndOf="@+id/icon_exit"
                        android:layout_marginStart="10dp"
                        android:textSize="18sp"
                        android:textColor="#5A5A5A"
                        android:text="@string/log_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>