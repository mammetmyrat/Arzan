<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AboutFragment"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:fitsSystemWindows="true"
        style="@style/BottomCornerRadius"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:fitsSystemWindows="true"
            android:background="@color/transparent"
            android:id="@+id/collapsing_toolbar_layout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_bg"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                app:cardElevation="0dp"
                app:cardCornerRadius="0dp"
                android:layout_height="290dp">
                <ImageView
                    android:src="@drawable/rules_bg"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.card.MaterialCardView>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:backgroundTint="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_marginTop="-140dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:clipToPadding="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_main"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/title"
                        android:text="@string/second_step"
                        android:gravity="center"
                        android:textSize="25sp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textColor="@color/main_color"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/add_card"
                        android:text="@string/choose_region"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:layout_marginTop="13dp"
                        app:layout_constraintTop_toBottomOf="@id/title"
                        android:textColor="#171717"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_regions"
                        app:layout_constraintTop_toBottomOf="@+id/add_card"
                        tools:listitem="@layout/item_region_dialog"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/next"
                        app:layout_constraintTop_toBottomOf="@+id/rv_regions"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:backgroundTint="@color/main_color"
                        app:cornerRadius="6dp"
                        android:layout_marginTop="40dp"
                        android:textColor="@color/white"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textSize="15sp"
                        android:text="@string/next"
                        android:layout_marginBottom="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_image"
                app:cardCornerRadius="100dp"
                app:cardElevation="15dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:elevation="20dp"
                    app:cardElevation="5dp"
                    android:layout_margin="13dp"
                    app:cardCornerRadius="100dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:id="@+id/image"
                        android:scaleType="fitXY"
                        android:layout_marginTop="-10dp"
                        android:layout_marginEnd="-20dp"
                        android:layout_marginStart="-20dp"
                        android:layout_marginBottom="-20dp"
                        android:src="@drawable/pay_logo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.google.android.material.card.MaterialCardView>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>