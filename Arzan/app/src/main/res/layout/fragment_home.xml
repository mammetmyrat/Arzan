<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context=".MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        style="@style/BottomCornerRadius"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:fitsSystemWindows="true"
            style="@style/BottomCornerRadius"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:fitsSystemWindows="true"
                android:background="@color/transparent"
                android:id="@+id/collapsing_toolbar_layout"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/main_card"
                    style="@style/BottomCornerRadius"
                    app:cardElevation="5dp"
                    android:layout_marginBottom="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/banner_card"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            android:layout_marginTop="-3dp"
                            android:layout_marginEnd="-3dp"
                            android:layout_marginStart="-3dp"
                            android:layout_width="match_parent"
                            android:layout_height="240dp">
                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
                                android:id="@+id/dot"
                                android:layout_gravity="bottom|center_horizontal"
                                android:layout_marginBottom="3dp"
                                app:dotsColor="@color/white"
                                app:dotsSize="8dp"
                                app:dotsSpacing="5dp"
                                app:dotsStrokeWidth="6dp"
                                app:dotsStrokeColor="#006000"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </com.google.android.material.card.MaterialCardView>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            app:layout_constraintTop_toBottomOf="@+id/banner_card"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:padding="0dp"
                            android:layout_marginTop="6dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/statistic"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="8dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginTop="2dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/notification"
                                android:layout_width="45dp"
                                android:layout_height="30dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_statistic"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/badgeStatistic"
                                    android:layout_gravity="end"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:background="@drawable/badge"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/notification"
                                app:cardElevation="4dp"
                                app:layout_constraintStart_toEndOf="@+id/statistic"
                                app:layout_constraintTop_toTopOf="@id/statistic"
                                app:layout_constraintBottom_toBottomOf="@id/statistic"
                                app:layout_constraintEnd_toStartOf="@+id/region"
                                android:layout_marginStart="12dp"
                                app:cardCornerRadius="8dp"
                                android:layout_width="45dp"
                                android:layout_height="30dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/icon"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_notification"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/badgeNotify"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginEnd="-3dp"
                                        android:layout_marginTop="-3dp"
                                        app:layout_constraintTop_toTopOf="@id/icon"
                                        app:layout_constraintEnd_toEndOf="@id/icon"
                                        android:background="@drawable/badge"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:text="10"
                                        android:maxLength="3"
                                        android:textSize="7sp"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/official"
                                app:layout_constraintEnd_toStartOf="@+id/view_type"
                                app:layout_constraintTop_toTopOf="@id/statistic"
                                app:layout_constraintBottom_toBottomOf="@id/statistic"
                                app:layout_constraintStart_toEndOf="@+id/region"
                                android:layout_marginEnd="12dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="8dp"
                                android:layout_width="45dp"
                                android:layout_height="30dp">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/icon_official"
                                        android:layout_gravity="center"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        android:src="@drawable/ic_official"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <TextView
                                        android:id="@+id/badgeOfficial"
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginEnd="-5dp"
                                        android:layout_marginTop="-5dp"
                                        app:layout_constraintTop_toTopOf="@id/icon_official"
                                        app:layout_constraintEnd_toEndOf="@id/icon_official"
                                        android:background="@drawable/badge"
                                        android:gravity="center"
                                        android:textColor="@color/white"
                                        android:maxLength="3"
                                        android:textSize="7sp"
                                        />
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/view_type"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/statistic"
                                app:layout_constraintBottom_toBottomOf="@id/statistic"
                                android:layout_marginEnd="4dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="8dp"
                                android:layout_width="45dp"
                                android:layout_height="30dp">
                                <ImageView
                                    android:id="@+id/type_icon"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_view_small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </com.google.android.material.card.MaterialCardView>
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/region"
                                app:layout_constraintStart_toEndOf="@+id/notification"
                                app:layout_constraintEnd_toStartOf="@+id/official"
                                app:layout_constraintTop_toTopOf="@+id/statistic"
                                app:layout_constraintBottom_toBottomOf="@id/statistic"
                                android:layout_marginEnd="12dp"
                                android:layout_marginStart="12dp"
                                app:cardElevation="4dp"
                                app:cardCornerRadius="8dp"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                >
                                <TextView
                                    android:text="Ashgabat"
                                    android:textColor="@color/main_text_color"
                                    android:textSize="17sp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/aldrich"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:id="@+id/region_text"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"/>
                            </com.google.android.material.card.MaterialCardView>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin">

                </androidx.appcompat.widget.Toolbar>


            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_vip"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_vip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <RelativeLayout
                    app:layout_constraintTop_toBottomOf="@+id/rv_vip"
                    android:id="@+id/vipline"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/view_all"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/adamina"
                        android:visibility="visible"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/view_all"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_posts"
                    app:layout_constraintTop_toBottomOf="@+id/vipline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
                <ProgressBar
                    android:id="@+id/progress"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/rv_posts"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="55dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>