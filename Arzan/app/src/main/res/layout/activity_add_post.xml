<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/BottomCornerRadius"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_btn"
                android:src="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:layout_width="11dp"
                android:layout_height="23dp"/>
            <TextView
                android:text="@string/add_post"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/region_card"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:id="@+id/expanded_header"
                        android:layout_margin="5dp"
                        app:expansion_layout="@id/expanded_layout"
                        app:expansion_headerIndicator="@id/down"
                        app:expansion_headerIndicatorRotationCollapsed="-90"
                        app:expansion_headerIndicatorRotationExpanded="90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/region_text"
                                android:text="@string/choose_region"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginTop="3dp"
                                android:gravity="center"
                                android:layout_toStartOf="@+id/down"
                                android:layout_marginBottom="3dp"
                                android:layout_marginEnd="3dp"
                                android:textColor="#333333"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:id="@+id/down"
                                android:src="@drawable/ic_back"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="14dp"
                                android:layout_centerVertical="true"
                                android:layout_width="20dp"
                                android:layout_height="20dp"/>
                        </RelativeLayout>
                    </com.github.florent37.expansionpanel.ExpansionHeader>
                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expanded_layout"
                        app:expansion_expanded="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_regions"
                                tools:listitem="@layout/item_region_small"
                                tools:itemCount="6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </RelativeLayout>

                    </com.github.florent37.expansionpanel.ExpansionLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:id="@+id/imageLine"
                app:layout_constraintTop_toBottomOf="@+id/region_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/layout"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/add_image"
                    android:src="@drawable/add_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_images"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_sel_image"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout"
                android:layout_marginBottom="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@+id/imageLine"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <EditText
                    android:id="@+id/title"
                    android:hint="@string/d_ndiri"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:maxLength="100"
                    android:textColor="@color/main_text_color"
                    android:background="@drawable/editext_b"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:elevation="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintTop_toBottomOf="@+id/layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/send"
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <EditText
                    android:id="@+id/desc"
                    android:layout_marginTop="5dp"
                    android:hint="@string/d_ndiri"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:maxLength="300"
                    android:textColor="@color/main_text_color"
                    android:background="@drawable/editext_b"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/send"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/send"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_color"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>