<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="15dp"
        app:cardElevation="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6.25dp"
        android:layout_marginBottom="6.25dp"
        android:layout_width="match_parent"
        android:layout_height="87dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12.5dp"
                    android:layout_marginBottom="12.5dp"
                    android:id="@+id/userimage"
                    android:src="@drawable/user"
                    android:layout_width="61.85dp"
                    android:layout_height="61.85dp"/>
            <TextView
                android:id="@+id/username"
                app:layout_constraintStart_toEndOf="@+id/userimage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/userimage"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="16sp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Name Surname"
                android:textColor="#171717"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/about"
                app:layout_constraintStart_toEndOf="@+id/userimage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username"
                android:layout_marginStart="16sp"
                android:layout_marginEnd="10dp"
                android:textSize="12sp"
                android:text="@string/lorem"
                android:maxLines="3"
                android:textColor="#484848"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/follow_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="17sp"
                android:layout_marginStart="17sp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/follow_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/follow"
                    android:textSize="8.5sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="4.5dp"
                    android:layout_marginStart="4.5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="@string/follow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>