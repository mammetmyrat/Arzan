<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".fragment.main.SearchFragment"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_card"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:padding="0dp"
        style="@style/BottomCornerRadius"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/back_btn"
                android:layout_alignTop="@+id/search_card"
                android:layout_alignBottom="@id/search_card"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_back"
                android:layout_width="20dp"
                android:layout_height="0dp"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                app:cardElevation="0dp"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#ECECEC"
                android:layout_toEndOf="@+id/back_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/editText"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:ems="10"
                        app:iconifiedByDefault="false"
                        app:searchIcon="@null"
                        app:queryBackground="@android:color/transparent"
                        android:maxLines="1"
                        app:queryHint="@string/search"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/search"
                        />
                    <ImageView
                        android:id="@+id/search"
                        android:layout_gravity="end"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:elevation="10dp"
                        android:layout_margin="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/icon_search"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/count"
                android:layout_below="@+id/search_card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#333333"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/view_type"
                android:src="@drawable/ic_view_small"
                android:layout_below="@+id/search_card"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        app:layout_constraintTop_toTopOf="@+id/main_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search"
                tools:listitem="@layout/item_post_standart"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="110dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:id="@+id/progress"
                android:visibility="gone"
                android:paddingBottom="55dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/no_result"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/main_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_search_no_result"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:id="@+id/title"
            android:layout_below="@+id/icon"
            android:layout_marginTop="10dp"
            android:textColor="#9E9E9E"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:text="@string/no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"
            android:textColor="#9E9E9E"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginEnd="-40dp"
            android:layout_marginStart="-40dp"
            android:gravity="center"
            android:layout_alignStart="@+id/title"
            android:layout_alignEnd="@+id/title"
            android:layout_centerHorizontal="true"
            android:text="@string/more_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>