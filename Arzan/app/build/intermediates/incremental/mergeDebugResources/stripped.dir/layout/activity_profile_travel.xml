<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        style="@style/BottomCornerRadius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toolbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/BottomCornerRadius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/back_btn"
                        android:src="@drawable/ic_back"
                        android:layout_centerVertical="true"
                        android:layout_width="11dp"
                        android:layout_height="23dp"/>
                    <TextView
                        android:text="@string/profile"
                        android:gravity="start"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:layout_toEndOf="@+id/back_btn"
                        android:layout_alignParentEnd="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <ImageView
                android:id="@+id/banner"
                app:layout_collapseMode="parallax"
                android:src="@drawable/image"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                >
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-100dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="-55dp"
                android:layout_below="@+id/card_image"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_marginTop="7.5dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/username"
                            android:background="@color/white"
                            android:enabled="false"
                            android:singleLine="true"
                            android:maxLength="30"
                            android:minEms="3"
                            android:gravity="center_horizontal"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:layout_gravity="center_horizontal"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:textColor="#171717"
                            android:fontFamily="@font/aldrich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_marginTop="7.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_toStartOf="@+id/region"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_location_profile"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/region"
                            android:layout_centerInParent="true"
                            android:textSize="15sp"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:textColor="#707070"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/following_line"
                        android:layout_marginTop="7.5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/follower_count"
                            android:layout_gravity="center_horizontal"
                            android:text="0"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#444444"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/following"
                            android:layout_gravity="center_horizontal"
                            android:textAllCaps="true"
                            android:textSize="13sp"
                            android:textColor="#707070"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="7.5dp"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/about"
                            android:background="@color/white"
                            android:enabled="false"
                            android:maxLines="3"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_horizontal"
                            android:textAppearance="?attr/textAppearanceBodyLarge"
                            android:layout_gravity="center_horizontal"
                            android:textSize="12sp"
                            android:textColor="#171717"
                            android:fontFamily="@font/aldrich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/read_more"
                            android:visibility="gone"
                            android:text="@string/read_more"
                            android:layout_marginTop="7.5dp"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/main_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/follow_btn"
                        android:visibility="visible"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/follow_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/follow"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginEnd="7.5dp"
                            android:layout_marginStart="7.5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:text="@string/follow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_centerHorizontal="true"
                android:id="@+id/card_image"
                app:cardCornerRadius="100dp"
                app:cardElevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/userimage"
                    android:src="@drawable/user"
                    android:scaleType="fitXY"
                    android:layout_width="115dp"
                    android:layout_height="115dp"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/all_posts"
                android:text="@string/posts"
                android:layout_marginTop="13dp"
                android:layout_marginStart="7.5dp"
                android:textSize="18sp"
                android:textColor="#505050"
                android:layout_below="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/all_post_count"
                android:text="0"
                android:layout_marginTop="13dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp"
                android:textSize="18sp"
                android:textColor="#505050"
                android:layout_below="@+id/card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_all_posts"
                tools:listitem="@layout/item_post_standart"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/all_posts"
                android:layout_marginBottom="55dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
