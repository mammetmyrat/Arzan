<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        style="@style/More"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/repost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/repost_card"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="20sp"
                    android:layout_width="28dp"
                    android:layout_height="28.5dp">
                    <ImageView
                        android:src="@drawable/ic_reload"
                        android:layout_margin="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_toEndOf="@+id/repost_card"
                    android:layout_alignTop="@+id/repost_card"
                    android:layout_alignBottom="@+id/repost_card"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:textColor="#707070"
                    android:text="@string/repost"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/edit"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/edit_card"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="20sp"
                    android:layout_width="28dp"
                    android:layout_height="28.5dp">
                    <ImageView
                        android:src="@drawable/ic_baseline_edit_24"
                        android:layout_margin="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_toEndOf="@+id/edit_card"
                    android:layout_alignTop="@+id/edit_card"
                    android:layout_alignBottom="@+id/edit_card"
                    android:gravity="center"
                    android:layout_marginStart="15dp"
                    android:textSize="16sp"
                    android:textColor="#707070"
                    android:text="@string/edit"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/delete_card"
                    android:layout_marginStart="16sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="28dp"
                    android:layout_height="28.5dp">
                    <ImageView
                        android:src="@drawable/ic_delete"
                        android:layout_margin="6dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.card.MaterialCardView>
                <TextView
                    android:layout_toEndOf="@+id/delete_card"
                    android:layout_alignTop="@+id/delete_card"
                    android:layout_alignBottom="@+id/delete_card"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    android:textColor="#707070"
                    android:text="@string/delete"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>